<Window x:Class="Project_for_san_com.RaportN"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_for_san_com"
        mc:Ignorable="d"
                Title="Санитарная комиссия Общежития №2" Height="450" Width="725" MinWidth="725" MaxWidth="725">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel x:Name="MainStackPanel" Margin="10">
            <!-- Кнопка для добавления TextBox -->
            <Button Width="650" x:Name="AddTextBoxButton" 
                    Content="Добавить рапорт" 
                    Click="AddTextBoxButton_Click" 
                    HorizontalAlignment="Left" />
            <TextBlock Margin="10,0,0,0" Text="Комната     Жильцы комнаты"/>
            <Button Width="650" x:Name="SaveButton" Content="Сохранить" HorizontalAlignment="Left"/>
        </StackPanel>
    </ScrollViewer>
</Window>
